@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <style>
        .divider:after,
        .divider:before {
            content: "";
            flex: 1;
            height: 1px;
            background: #eee;
        }
    </style>
</head>
<body>
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex align-items-center justify-content-center h-100">
                <div class="col-md-8 col-lg-7 col-xl-6">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                         class="img-fluid" alt="Phone image">
                </div>
                <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                    @*<form action="/Home/Index" method="post"  >*@
                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary(true)
                        <!-- Email input -->
                        <div class="form-outline mb-8">
                            <label class="form-label" name="UserName" for="form1Example13">Tài Khoản</label>
                            <input type="text" name="UserName" id="form1Example13" class="form-control form-control-lg" />
                            <label class="form-label" name="Password" for="form1Example23">Mật Khẩu</label>
                            <input type="password"  name="Password" id="form1Example23" class="form-control form-control-lg" />
                            <p style="font-style:italic;color:red;margin:0px;">@ViewBag.ThongBao</p>
                        </div>

                        <!-- Password input -->
                        @*<div class="form-outline mb-4">

            </div>*@

                        <div class="d-flex justify-content-around align-items-center mb-4">
                            <!-- Checkbox -->
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="form1Example3" checked />
                                <label class="form-check-label" for="form1Example3"> Nhớ Mật Khẩu</label>
                            </div>
                            <a href="#!">Quên Mật Khẩu?</a>
                        </div>

                        <!-- Submit button -->
                        <button type="submit" style="width: 525px" class="btn btn-primary btn-lg btn-block">Đăng Nhập</button>

                        <div class="divider d-flex align-items-center my-4">
                            <p class="text-center fw-bold mx-3 mb-0 text-muted">Hoặc</p>
                        </div>

                        <a class="btn btn-primary btn-lg btn-block" style="background-color: #3b5998" href="#!"
                           role="button">
                            <i class="fab fa-facebook-f me-2"></i>Đăng nhập Facebook
                        </a>
                        <a class="btn btn-primary btn-lg btn-block" style="background-color: #55acee" href="#!"
                           role="button">
                            <i class="fab fa-twitter me-2"></i>Đăng nhập Google
                        </a>
                    }
                    @*</form>*@
                </div>
            </div>
        </div>
    </section>
