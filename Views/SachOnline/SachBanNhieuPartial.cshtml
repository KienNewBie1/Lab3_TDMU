@model IEnumerable<SachOnline.Models.Book>
<h2 class="text-center">SÁCH BÁN NHIỀU</h2>
<hr>
<div class="row text-center">
    @foreach (var Book in Model)
    {
        <div class="col-sm-4 col-md-4 col-lg-4 col-xs-6">
            <div class="thumbanil">
                <img src="~/Images/@Book.AnhBia" alt="Thumbnail Image 1"
                     class="img-responsive img-rounded imgbook" style="width:400px;" />
                <div class="caption">
                    <h4 style="min-height:70px;">
                        <a href="@Url.Action("SachBanNhieu","SachOnline",new {id =Book.BookID})">
                            @Book.NameBook
                        </a>
                    </h4>
                    <p>
                        <a href="#" class="btn btn-primary" role="button">
                            <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true">
                            </span> Add to cart
                        </a>
                    </p>
                </div>

            </div>
        </div>
    }
</div>
